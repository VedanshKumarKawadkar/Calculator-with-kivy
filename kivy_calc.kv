<MyLayout>
    BoxLayout:
        orientation: "vertical"
        size: root.width, root.height 

        TextInput:
            id: calc_input
            text: "0"
            halign: "right"
            font_size: 60
            size_hint: (1, 0.25)

        GridLayout:
            cols: 4
            rows: 5
            padding: 10
            spacing: 5

            Button: 
                size_hint: (0.2, 0.2)
                font_size: 35
                text: "%"
                background_color: (0.1, 0.4, 0.7, 1)

            Button: 
                size_hint: (0.2, 0.2)
                font_size: 35
                text: "C"
                background_color: (0.1, 0.4, 0.7, 1)
                on_press: root.clear()

            Button: 
                id: clear
                size_hint: (0.2, 0.2)
                font_size: 35
                text: u"\u00AB"
                background_color: (0.1, 0.4, 0.7, 1)
                on_press: root.remove()

            Button: 
                size_hint: (0.2, 0.2)
                font_size: 35
                text: "/"
                background_color: (0.1, 0.4, 0.7, 1)
                on_press: root.math_sign("/")

                
            Button: 
                size_hint: (0.2, 0.2)
                font_size: 35
                text: "7"
                background_color: (0.1, 0.4, 0.7, 1)
                background_normal: ""
                on_press: root.button_press(7)

            Button: 
                size_hint: (0.2, 0.2)
                font_size: 35
                text: "8"
                background_color: (0.1, 0.4, 0.7, 1)
                background_normal: ""
                on_press: root.button_press(8)

            Button: 
                size_hint: (0.2, 0.2)
                font_size: 35
                text: "9"
                background_color: (0.1, 0.4, 0.7, 1)
                background_normal: ""
                on_press: root.button_press(9)

            Button: 
                size_hint: (0.2, 0.2)
                font_size: 35
                text: "X"
                background_color: (0.1, 0.4, 0.7, 1)
                on_press: root.math_sign("*")

            Button: 
                size_hint: (0.2, 0.2)
                font_size: 35
                text: "4"
                background_color: (0.1, 0.4, 0.7, 1)
                background_normal: ""
                on_press: root.button_press(4)

            Button: 
                size_hint: (0.2, 0.2)
                font_size: 35
                text: "5"
                background_color: (0.1, 0.4, 0.7, 1)
                background_normal: ""
                on_press: root.button_press(5)

            Button: 
                size_hint: (0.2, 0.2)
                font_size: 35
                text: "6"
                background_color: (0.1, 0.4, 0.7, 1)
                background_normal: ""
                on_press: root.button_press(6)

            Button: 
                size_hint: (0.2, 0.2)
                font_size: 35
                text: "-"
                background_color: (0.1, 0.4, 0.7, 1)
                on_press: root.math_sign("-")

            Button: 
                size_hint: (0.2, 0.2)
                font_size: 35
                text: "1"
                background_color: (0.1, 0.4, 0.7, 1)
                background_normal: ""
                on_press: root.button_press(1)

            Button: 
                size_hint: (0.2, 0.2)
                font_size: 35
                text: "2"
                background_color: (0.1, 0.4, 0.7, 1)
                background_normal: ""
                on_press: root.button_press(2)

            Button: 
                size_hint: (0.2, 0.2)
                font_size: 35
                text: "3"
                background_color: (0.1, 0.4, 0.7, 1)
                background_normal: ""
                on_press: root.button_press(3)

            Button: 
                size_hint: (0.2, 0.2)
                font_size: 35
                text: "+"
                background_color: (0.1, 0.4, 0.7, 1)
                on_press: root.math_sign("+")

            Button: 
                size_hint: (0.2, 0.2)
                font_size: 35
                text: "+/-"
                background_color: (0.1, 0.4, 0.7, 1)
                on_press: root.plusminus()

            Button: 
                size_hint: (0.2, 0.2)
                font_size: 35
                text: "0"
                background_color: (0.1, 0.4, 0.7, 1)
                background_normal: ""
                on_press: root.button_press(0)

            Button: 
                size_hint: (0.2, 0.2)
                font_size: 35
                text: "."
                background_color: (0.1, 0.4, 0.7, 1)
                on_press: root.dot()

            Button: 
                size_hint: (0.2, 0.2)
                font_size: 35
                text: "="
                background_color: (0.1, 0.4, 0.7, 1)
                on_press: root.equals()